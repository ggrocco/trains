        <GroupBox Header="Input (DSL):" Margin="0,85,267,0" Name="groupBox1">
            <Grid>
                <TextBox Name="txtInputDsl" VerticalScrollBarVisibility="Visible" AcceptsReturn="True" TextWrapping="Wrap"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Output:" Margin="0,85,0,0" Name="gpOutput" HorizontalAlignment="Right" Width="261">
            <Grid>
                <TextBlock Name="txtOutput"/>
            </Grid>
        </GroupBox>
        <Label Content="Routes:" Height="28" HorizontalAlignment="Left" Name="lblInputRoutes" VerticalAlignment="Top" Margin="6,27,0,0" />
    </Grid>
</Window>
