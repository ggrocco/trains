<Window x:Class="ThoughtWorks.Trans.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trans Client" Height="440" Width="800" MinWidth="800" MinHeight="440">
